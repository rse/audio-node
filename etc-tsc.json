{
    "compilerOptions": {
        "target":                  "es2022",
        "useDefineForClassFields": true,
        "module":                  "es2022",
        "moduleResolution":        "Node",
        "strict":                  true,
        "jsx":                     "preserve",
        "resolveJsonModule":       true,
        "isolatedModules":         true,
        "esModuleInterop":         true,
        "lib":                     [ "es2022", "DOM" ],
        "skipLibCheck":            true,
        "noEmit":                  true,
        "types":                   [ "vite/client" ],
        "rootDir":                 "./"
    },
    "include": [
        "src/**/*.ts", "src/**/*.d.ts"
    ],
    "references": [
        { "path": "./etc-tsc.node.json" }
    ]
}
